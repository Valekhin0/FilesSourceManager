{
  "name": "files-source-manager",
  "version": "1.0.0",
  "description": "The library makes it easier to work with files and folders and helps ensure the existence of all resources used by the project.",
  "keywords": [
    "File",
    "File System"
  ],
  "license": "UNLICENSED",
  "author": "Valekhin0 valekhin.prof@gmail.com",
  "type": "commonjs",
  "main": "dist/init.js",
  "files": ["dist"],
  "repository": {
    "type": "git"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest",
    "test:debug": "node --inspect-brk -r node_modules/.bin/jest --runInBand",
    "test-build": "npm run build&&npm t"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
